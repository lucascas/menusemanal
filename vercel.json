{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",      // Redirigir todas las rutas /api/ al backend
      "dest": "/api/server.js"
    },
    {
      "src": "/(.*)",          // Redirigir todo lo dem√°s al frontend
      "dest": "/frontend/$1"
    }
  ]
}
