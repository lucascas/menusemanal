{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",      
      "destination": "/api/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://menusemanal.vercel.app/api"
  }
}
